<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:orientation="vertical" >     
   
    <RelativeLayout
        android:layout_width="fill_parent"
        android:layout_height="70dp"        
        android:background="#00B6EF">
            
        <TextView 
            android:layout_height="fill_parent"
            android:layout_width="fill_parent"
            android:gravity="center"
            android:text="New Task"
            android:textColor="#ffffff"
            android:textSize="24sp"/>
        
        
  </RelativeLayout>
  
     <LinearLayout
        android:id="@+id/detail"
            android:layout_height="fill_parent"
            android:layout_width="fill_parent"
            android:orientation="vertical"
            android:background="#ffffff">

        <RelativeLayout
             
            android:layout_width="fill_parent"
            android:layout_height="90dp"
            android:layout_marginTop="2dp"
            android:background="#f2f2f2" > 
            <!-- <TextView
                android:id="@+id/message_detail"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:gravity="center_vertical"
                android:layout_marginRight="20dp"
                android:layout_marginTop="25dp"
                android:ellipsize="end"
           		android:lines="1"
            	android:maxLines="1"
            	android:maxLength="35"
                android:text="Give your message"
                android:textSize="20sp" />
 -->
            <ImageView
                android:id="@+id/editmessage_task"
                android:layout_width="55dp"
                android:layout_height="55dp"
                android:layout_alignParentLeft="true"
                android:layout_centerVertical="true"
                android:layout_marginLeft="25dp"
                android:src="@drawable/editmessagebuttonselector" />

            <EditText
                android:id="@+id/message_detail"
                android:layout_width="210dp"
                android:layout_height="wrap_content"
                android:layout_marginRight="20dp"
                android:layout_alignParentRight="true"
               	android:gravity="center_vertical"
                android:layout_marginTop="25dp"
                android:maxWidth="220dp"
                android:singleLine="true"
                android:hint="Give your message" >
            </EditText>
            
        </RelativeLayout>
        
        <RelativeLayout
           
            android:layout_height="90dp"
            android:layout_width="fill_parent"
            android:layout_marginTop="2dp"
            android:background="#f2f2f2"> 
            
            <!-- <TextView
            android:id="@+id/picklocation"            
            android:layout_height="wrap_content"
            android:layout_width="wrap_content"
            android:layout_marginRight="20dp"
            android:layout_marginLeft="170dp"
           android:gravity="center_vertical"
           android:paddingTop="18dp"
            android:ellipsize="end"
            android:lines="2"
            android:maxLines="2"
            android:layout_alignParentRight="true"
            android:layout_alignWithParentIfMissing="true"
            android:text="Pick a Location"
            android:textSize="20sp"/> -->
           <TextView
            android:id="@+id/picklocation"            
            android:layout_height="wrap_content"
            android:layout_width="wrap_content"
           	android:layout_marginTop="20dp"
            android:maxLines="2"
            android:ellipsize="end"
            android:layout_marginLeft="130dp"
           android:layout_marginRight="10dp"
            android:text="               Pick a Location"
            android:textSize="20sp"/>

            <ImageView
                android:id="@+id/locationpin"
                android:layout_width="55dp"
                android:layout_height="55dp"
                android:layout_alignParentLeft="true"
                android:layout_centerVertical="true"
                android:layout_marginLeft="25dp"
                android:src="@drawable/locationpinbuttonselector" />
            
        </RelativeLayout>
                
        <RelativeLayout
            
            android:layout_height="90dp"
            android:layout_width="fill_parent"
            android:layout_marginTop="2dp"
            android:background="#f2f2f2"> 
            
            <TextView
            android:id="@+id/contact_no"
            android:layout_height="200dp"
            android:layout_width="wrap_content"
            android:layout_marginRight="20dp"
            android:layout_marginLeft="120dp"
            android:layout_alignParentRight="true"
            android:gravity="center_vertical"
            android:text="Contact no"
            android:ellipsize="end"
           	android:lines="2"
            android:maxLines="2"
            android:textSize="20sp"/>

            <ImageView
                android:id="@+id/contactformessage"
                android:layout_width="55dp"
                android:layout_height="55dp"
                android:layout_alignParentLeft="true"
                android:layout_centerVertical="true"
                android:layout_marginLeft="25dp"
                android:src="@drawable/contactbuttonselector" />
       
        </RelativeLayout>

        <Button
            android:id="@+id/action_chooser_ok"
            android:layout_width="100dp"
            android:layout_height="55dp"
            android:layout_marginTop="40dp"
            android:background="@drawable/rectangleselector"
            android:layout_gravity="center_horizontal"
            android:text="OK"
            android:textColor="#ffffff"
            android:textSize="20sp" />
        
   </LinearLayout> 
    

    </LinearLayout>
 