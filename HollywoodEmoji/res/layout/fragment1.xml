<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/hollywood"
    android:orientation="vertical" 
    xmlns:tools="http://schemas.android.com/tools" tools:context="com.mobirizer.hollywoodemoji.Fragment1">
   <LinearLayout 
       android:layout_width="fill_parent"
       android:layout_height="fill_parent"
       android:orientation="vertical"
       android:gravity="center">
       

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="5dp"
        android:layout_marginTop="77dp">

        <TextView
            android:id="@+id/questNo"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="#00000000"
            android:text="Q: "
            android:textColor="#000000"
            android:textSize="12dp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/isCurrect"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_marginRight="5dp"
            android:layout_marginTop="5dp"
            android:gravity="right"
            android:text="Score:"
            android:textColor="#000000"
            android:textSize="12dp"
            android:textStyle="bold" />
    </RelativeLayout>

    <TextView
        android:id="@+id/quest1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:minLines="2"
        android:paddingTop="5dp"
        android:layout_marginLeft="5dp"
        android:text="Where is the Demo Question?"
        android:textColor="#ffffff"
        android:textSize="15dp" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="5dp"
        android:layout_marginRight="5dp"
        android:background="@drawable/white_bg"
        android:orientation="vertical"
        android:padding="5dp" >

        <LinearLayout
            android:id="@+id/lq1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            android:layout_marginTop="5dp"
            android:background="#00000000"
            android:orientation="horizontal"
            android:paddingTop="10dp" >

            <ImageView
                android:id="@+id/currect1"
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:layout_gravity="center"
                android:background="@drawable/a_ico"
                android:padding="5dp" />

            <ImageView
                android:id="@+id/f1ansView1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@drawable/q10a1"
                android:onClick="getAns"
                android:tag="a1" />
        </LinearLayout>

        <LinearLayout
            android:id="@+id/lq2"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            android:background="#00000000"
            android:orientation="horizontal" >

            <ImageView
                android:id="@+id/currect2"
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:layout_gravity="center"
                android:background="@drawable/b_ico"
                android:padding="5dp" />

            <ImageView
                android:id="@+id/f1ansView2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:onClick="getAns"
                android:tag="a2" />
        </LinearLayout>

        <LinearLayout
            android:id="@+id/lq3"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            android:background="#00000000"
            android:orientation="horizontal" >

            <ImageView
                android:id="@+id/currect3"
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:layout_gravity="center"
                android:background="@drawable/c_ico"
                android:padding="8dp" />

            <ImageView
                android:id="@+id/f1ansView3"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:onClick="getAns"
                android:tag="a3" />
        </LinearLayout>

        <LinearLayout
            android:id="@+id/lq4"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            android:background="#00000000"
            android:orientation="horizontal" >

            <ImageView
                android:id="@+id/currect4"
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:layout_gravity="center"
                android:background="@drawable/d_ico"
                android:padding="5dp" />

            <ImageView
                android:id="@+id/f1ansView4"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginBottom="5dp"
                android:background="@drawable/q10a1"
                android:onClick="getAns"
                android:tag="a4" />
        </LinearLayout>
    </LinearLayout>

    <Button
        android:id="@+id/changer"
        android:layout_width="wrap_content"
        android:layout_height="60dp"
        android:layout_gravity="center"
        android:background="@drawable/button_change"
        android:shadowColor="#A8A8A8"
        android:shadowDx="0"
        android:shadowDy="0"
        android:shadowRadius="5"
        android:text="Next"
        android:textColor="#000000"
        android:textSize="20sp" />
</LinearLayout>
</LinearLayout>