<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@drawable/mainpgbg" >
    
      <LinearLayout 
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:orientation="vertical"
        android:gravity="center">
        
        <ImageView 
            android:id="@+id/AboutProduct"
            android:layout_width="200dp"
            android:layout_height="wrap_content"
             android:onClick="showProduct"
             android:background="@drawable/abtcompany_selector"/>
         <ImageView 
            android:id="@+id/AboutCompany"
            android:layout_width="200dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
              android:onClick="showCompany"
             android:background="@drawable/abtproduct_selector"/>
        <ImageView 
            android:id="@+id/MoreApps"
            android:layout_width="200dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:onClick="openPlayStore"
             android:background="@drawable/moreapp_selector"/>
     
       
     </LinearLayout>
    
    <RelativeLayout
        android:id="@+id/layoutAd2"
        android:layout_width="fill_parent"
        android:layout_height="50dp"
        android:layout_marginTop="10dp"
        android:layout_alignParentBottom="true"
        android:gravity="center_horizontal|bottom">
       </RelativeLayout>

</LinearLayout>